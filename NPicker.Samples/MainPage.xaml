<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="NPicker.Samples.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:NPicker="clr-namespace:NPicker;assembly=NPicker"
             Title="NPicker">

    <ScrollView>
        <VerticalStackLayout Spacing="25"
                             Padding="30">

            <NPicker:DatePicker x:Name="_picker"
                                HorizontalOptions="Center"
                                Format="dd/MM/yyyy" />

            <Button x:Name="CounterBtn"
                    Text="Set Null"
                    HorizontalOptions="Fill"
                    Clicked="OnCounterClicked" />

            <Button Text="Show Current Value"
                    HorizontalOptions="Fill"
                    Clicked="OnShowCurrentValue" />

            <Label x:Name="LabelCurrentValue" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
